<mvc:View controllerName="com.exercise.onlinestoresapui5.controller.ProductList"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">

  <Table id="productList"
    class="sapUiResponsiveMargin"
    width="auto"
    items="{path: 'products>/products'}">
    <columns>
      <Column>
        <Text text="{i18n>columnId}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnBrand}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnTitle}"/>
      </Column>
    </columns>
    <items>
      <ColumnListItem type="Navigation"
        press=".onPress">
        <cells>
          <ObjectNumber number="{products>id}"
            emphasized="false"/>
          <Text text="{products>brand}"/>
          <ObjectIdentifier title="{products>title}"/>
        </cells>
      </ColumnListItem>
    </items>
  </Table>

</mvc:View>