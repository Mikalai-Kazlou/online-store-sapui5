<mvc:View controllerName="com.exercise.onlinestoresapui5.controller.ProductList"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid">

  <Table id="productList"
    class="sapUiResponsiveMargin"
    width="auto"
    items="{path: 'products>/products'}">
    <columns>
      <Column>
        <Text text="{i18n>columnId}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnBrand}"/>
      </Column>
      <Column>
        <Text text="{i18n>columnTitle}"/>
      </Column>
    </columns>
    <items>
      <ColumnListItem type="Navigation"
        press=".onPress">
        <cells>
          <ObjectNumber number="{products>id}"
            emphasized="false"/>
          <Text text="{products>brand}"/>
          <ObjectIdentifier title="{products>title}"/>
        </cells>
      </ColumnListItem>
    </items>
  </Table>

  <Panel id="panelForGridList"
    backgroundDesign="Transparent">
    <headerToolbar>
      <Toolbar height="3rem">
        <Title text="Grid List with GridBoxLayout and minWidth 17rem"/>
      </Toolbar>
    </headerToolbar>

    <f:GridList id="gridList"
      headerText="GridList header"
      items="{path: 'products>/products'}">
      <f:customLayout>
        <grid:GridBoxLayout boxMinWidth="20rem"/>
      </f:customLayout>

      <f:GridListItem>
        <VBox class="sapUiSmallMargin">

          <Title text="{products>title}"
            wrapping="true"/>
          <Label text="{products>brand}"
            wrapping="true"/>

          <VBox height="18rem">
            <Image src="{products>thumbnail}"
              width="100%"/>
          </VBox>

          <Text text="{products>description}"/>

        </VBox>
      </f:GridListItem>
    </f:GridList>

  </Panel>

</mvc:View>