<mvc:View controllerName="com.exercise.onlinestoresapui5.controller.Details"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:fiori="sap.ui.webc.fiori">

  <Page title="{i18n>detailsPageTitle}"
    class="sapUiResponsivePadding--header"
    showNavButton="true"
    navButtonPress=".onNavBack">
    <ObjectHeader responsive="true"
      fullScreenOptimized="true"
      intro="{products>brand}"
      title="{products>title}">
    </ObjectHeader>

    <fiori:MediaGallery items="{path: 'products>images'}">
      <fiori:MediaGalleryItem>
        <Image src="{products>}"/>
      </fiori:MediaGalleryItem>
    </fiori:MediaGallery>
  </Page>

</mvc:View>