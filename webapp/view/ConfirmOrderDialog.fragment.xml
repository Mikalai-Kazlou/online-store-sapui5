<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.ui.layout.form"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core">
  <Dialog id="idConfirmOrderDialog"
    title="Confirm order">
    <content></content>
    <footer>
      <Toolbar>
        <content>
          <ToolbarSpacer/>
          <Button type="Accept"
            text="Confirm"
            press=".onConfirmOrder"/>
          <Button id="Reject"
            text="Cancel"
            type="Reject"
            press=".onCancelOrder"
            ariaHasPopup="Dialog"/>
        </content>
      </Toolbar>
    </footer>
  </Dialog>
</core:FragmentDefinition>