<mvc:View controllerName="com.exercise.onlinestoresapui5.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page title="{i18n>mainPageTitle}"
		class="sapUiResponsivePadding--header">
		<headerContent>
			<Button id="goToCartButton"
				type="Default"
				icon="sap-icon://cart"
				text="{i18n>mainPageHeaderCartButtonText}"
				press=".onOpenCart">
				<customData>
					<BadgeCustomData key="badge"
						value="1"
						visible="true"/>
				</customData>
			</Button>
		</headerContent>
		<content>
			<mvc:XMLView viewName="com.exercise.onlinestoresapui5.view.ProductCatalog"/>
		</content>
	</Page>

</mvc:View>