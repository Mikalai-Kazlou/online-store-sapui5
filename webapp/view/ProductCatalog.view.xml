<mvc:View controllerName="com.exercise.onlinestoresapui5.controller.ProductCatalog"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:grid="sap.ui.layout.cssgrid">

  <f:GridList id="productCatalog"
    class="sapUiResponsiveContentPadding"
    headerText="{i18n>productCatalogTitle}"
    items="{path: 'products>/products'}">
    <f:customLayout>
      <grid:GridBoxLayout boxMinWidth="20rem"/>
    </f:customLayout>

    <f:GridListItem>
      <VBox class="sapUiSmallMargin"
        height="93%">
        <Title text="{products>title}"
          wrapping="true"/>
        <Label text="{products>brand}"
          wrapping="true"/>
        <FlexBox class="sapUiTinyMarginTopBottom"
          height="16rem">
          <Image src="{products>thumbnail}"
            width="100%"/>
        </FlexBox>
        <Text text="{products>description}">
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
        </Text>
        <HBox class="sapUiTinyMarginTop"
          justifyContent="SpaceBetween">
          <Button text="{i18n>productCatalogAddToCartButtonText}"
            width="8rem"
            press=".onPress">
          </Button>
          <Button text="{i18n>productCatalogDetailsButtonText}"
            width="8rem"
            press=".onPress">
          </Button>
        </HBox>
      </VBox>
    </f:GridListItem>

  </f:GridList>

</mvc:View>