<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <HBox class="sapUiSmallMarginEnd">
    <Label text="{i18n>mainPageHeaderTotalLabel}"
      design="Bold"/>
    <ObjectNumber class="sapUiTinyMarginBeginEnd"
      number="{
        parts: [{path: 'cart>/totalAmount'}, {path: 'cart>/currency'}],
        type: 'sap.ui.model.type.Currency',
        formatOptions: {showMeasure: false}
      }"
      unit="{cart>/currency}"/>
  </HBox>
  <Button id="idCartButton"
    type="Default"
    icon="sap-icon://cart"
    text="{i18n>mainPageHeaderCartButtonText}"
    press=".onOpenCart">
    <customData>
      <BadgeCustomData key="badge"
        value="{cart>/totalQuantity}"
        visible="true"/>
    </customData>
  </Button>
</core:FragmentDefinition>